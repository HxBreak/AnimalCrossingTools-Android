<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/villager_avatar"
        app:shapeAppearance="@style/AppTheme.Widget.VillagerCard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_container"
        app:layout_constraintTop_toBottomOf="@id/villager_avatar"
        style="@style/AppTheme.Widget.ColoredBackground"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            tools:text="Titleasdasd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:id="@+id/villager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/villager_name"
            app:layout_constraintStart_toStartOf="@id/villager_name"
            android:text="Birthday: "
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintTop_toTopOf="@id/birthday"
            app:layout_constraintBottom_toBottomOf="@id/birthday"
            app:layout_constraintStart_toEndOf="@id/birthday"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:id="@+id/birthday_value"
            tools:text="9/11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/birthday"
            app:layout_constraintStart_toStartOf="@id/birthday"
            android:id="@+id/gender"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:text="Gender: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="@id/gender"
            app:layout_constraintBottom_toBottomOf="@id/gender"
            app:layout_constraintStart_toEndOf="@id/gender"
            android:id="@+id/gender_value"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            tools:text="male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/gender"
            app:layout_constraintStart_toStartOf="@id/gender"
            android:id="@+id/villager_hobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:text="Hobby: "
            />

        <TextView
            app:layout_constraintTop_toTopOf="@id/villager_hobby"
            app:layout_constraintStart_toEndOf="@id/villager_hobby"
            app:layout_constraintBottom_toBottomOf="@id/villager_hobby"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:id="@+id/villager_hobby_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Music"
            />

        <TextView
            android:id="@+id/saying_value"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/villager_hobby"
            app:layout_constraintStart_toStartOf="@id/villager_hobby"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            tools:text="Good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>